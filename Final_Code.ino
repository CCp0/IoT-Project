void setup() {
  Serial.begin(9600);
  Blynk.begin(auth);
  // SSD1306_SWITCHCAPVCC = generate display voltage from 3.3V internally
  if(!display.begin(SSD1306_SWITCHCAPVCC, 0x3c)) {
    Serial.println(F("SSD1306 allocation failed"));
    for(;;); // Don't proceed, loop forever
  }

  // Show initial display buffer contents on the screen --
  // the library initializes this with an Adafruit splash screen.
  display.clearDisplay(); //Clear display is used to remove the Adafruit splash screen
  display.drawBitmap(0, 0,  Logo, 128, 64, WHITE); //Displays Logo
  display.display();
  delay(2000); // Pause for 2 seconds

  // Clear the buffer
  display.clearDisplay();
  // Show the display buffer on the screen. You MUST call display() after
  display.display();
  delay(2000);    
}

void loop() {
  Blynk.run();//Uploads data to blynk
  timer.run();
  display.clearDisplay(); //Removes the previous print
  display.setTextSize(2); // Draw 2X-scale text
  display.setTextColor(SSD1306_WHITE);
  display.setCursor(0, 0);
  if(digitalRead(SIGNAL_PIN)==HIGH) {
    Serial.println("Social Distance Breached"); //Using serial mostly for component checking purposes, 
    display.println("Distance\n Breached"); // \n Creates a line break that makes the text fill the screen fully
    display.ssd1306_command(0xA0); //Mirror effect on screen
    display.display(); //Displays the previous print
    delay(5000);
  } else { //Nothing happens when social distance isn't breached
    Serial.println("");
    display.println("");
    display.display();
    delay(500); //Small delay to keep Blynk from being overloaded with info
  }
}
